{
  "css.lint.validProperties": ["composes"],
  "css.lint.unknownAtRules": "ignore",
  "editor.tabSize": 2,
  "editor.minimap.enabled": false,
  "editor.guides.bracketPairs": "active",
  "editor.bracketPairColorization.enabled": true,
  "editor.fontFamily": "'Comic Code Ligatures','Recursive Mono Casual Static','Operator Mono', 'Dank Mono','Gintronic', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontWeight": "200",
  "editor.fontSize": 18,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.hover.delay": 1500,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.codeLens": true,
  "eslint.options": {
    "extensions": [".js", ".jsx", ".md", ".mdx", ".ts", ".tsx"]
  },
  "eslint.validate": [
    "markdown",
    "mdx",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "svelte"
  ],
  "eslint.format.enable": true,
  "diffEditor.codeLens": true,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.defaultGravatarsStyle": "monsterid",
  "gitlens.showWelcomeOnInstall": false,
  "gitlens.showWhatsNewAfterUpgrades": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "jest.autoRun": { "watch": false, "onSave": "test-src-file" },
  "prettier.enable": true,
  "prettier.prettierPath": "./node_modules/prettier",
  "python.defaultInterpreterPath": "/opt/homebrew/bin/python3",
  "redhat.telemetry.enabled": false,
  "search.exclude": {
    "**/.yarn": true,
    "**/.pnp.*": true
  },
  "thunder-client.saveToWorkspace": true,
  "terminal.integrated.fontSize": 18,
  "terminal.integrated.copyOnSelection": true,
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.tsdk": "./node_modules/typescript/lib/",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "vsicons.dontShowNewVersionMessage": true,
  "window.title": "${activeEditorMedium}${separator}${rootName}",
  "workbench.colorTheme": "poimandres-storm",
  "workbench.iconTheme": "vscode-icons",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  "workbench.editor.labelFormat": "short",
  "workbench.editor.openPositioning": "right",
  "workbench.editor.wrapTabs": true,
  "[markdown]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80
  },
  "svelte.enable-ts-plugin": true,
  "explorer.sortOrder": "filesFirst",
  "workbench.tree.indent": 16,
  "window.commandCenter": false,
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "[python]": {
    "editor.formatOnType": true
  },
  "editor.stickyScroll.enabled": true,
  "editor.inlineSuggest.enabled": true,
  "github.copilot.enable": {
    "*": false,
    "plaintext": true,
    "markdown": false,
    "scminput": false,
    "typescript": true,
    "javascript": true,
    "svelte": true
  },
  "terminal.integrated.tabStopWidth": 4,
  "github.gitProtocol": "ssh",
  "git.openRepositoryInParentFolders": "never",
  "window.zoomLevel": -1,
  "git.confirmSync": false,
  "cssvar.files": [
    "./node_modules/open-props/open-props.min.css",
    // if you have an alternative path to where your styles are located
    // you can add it in this array of files
    "assets/styles/variables.css"
  ],

  // Do not ignore node_modules css files, which is ignored by default
  "cssvar.ignore": [],

  // add support for autocomplete in JS or JS like files
  "cssvar.extensions": ["css", "postcss", "jsx", "tsx"],
  "[shellscript]": {
    "files.eol": "\n",
    "editor.formatOnType": true
  },
  "editor.linkedEditing": true,
  "terminal.integrated.fontFamily": "FantasqueSansMono Nerd Font",
  "codeium.enableCodeLens": false
}
