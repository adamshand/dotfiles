// https://zed.dev/docs/configuring-zed
// CMD-SHIFT-P and `open default settings` for default settings
{
  "theme": "Gruvbox Dark",
  "buffer_font_size": 18,
  "autosave": "on_focus_change",
  "project_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "assistant": {
    "dock": "right"
  },
  "hard_tabs": true,
  "tab_size": 2,
  "preferred_line_length": 80,
  "copy_on_select": true,
  "font_family": "Recursive Mono Casual Static",
  "tabs": {
    "git_status": true,
    "close_position": "right"
  }
}
