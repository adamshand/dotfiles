// https://zed.dev/docs/configuring-zed
// CMD-SHIFT-P and `open default settings` for default settings
{
  "theme": "Gruvbox Dark",
  "buffer_font_family": "Recursive Mono Casual Static",
  "buffer_font_size": 16,
  "copy_on_select": true,
  "autosave": "on_focus_change",
  "format_on_save": "on",
  "preferred_line_length": 80,
  "hard_tabs": false,
  "tab_size": 2,
  "tabs": {
    "git_status": true,
    "close_position": "right"
  },
  "project_panel": {
    "dock": "right",
    "git_status": true
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "assistant": {
    "dock": "right"
  }
}
